<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/white_grey_outline"
    android:orientation="horizontal"
    android:paddingHorizontal="3dp">

    <ImageView
        android:id="@+id/iv_category_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:tint="@color/default_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/tv_category_korean"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category_korean"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/default_text_color"
        app:layout_constraintBottom_toBottomOf="@id/iv_category_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_category_icon"
        app:layout_constraintTop_toTopOf="@id/iv_category_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>